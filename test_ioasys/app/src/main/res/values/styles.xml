<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorAppBackground</item>
    </style>

    <style name="SplashScreenTheme" parent="AppTheme">
        <item name="android:navigationBarColor">@color/colorAppBackground</item>
        <item name="android:statusBarColor">@color/colorAppBackground</item>
        <item name="android:windowBackground">@drawable/splash_screen_background</item>
    </style>

    <style name="TextInputLayoutStyle">
        <item name="android:textColorHint">@color/colorSecondaryText</item>
        <item name="boxStrokeErrorColor">@color/colorRedAlert</item>
        <item name="errorIconDrawable">@drawable/ic_warning</item>
        <item name="errorIconTint">@color/colorRedAlert</item>
        <item name="errorTextColor">@android:color/transparent</item>
        <item name="hintAnimationEnabled">false</item>
        <item name="hintEnabled">false</item>
        <item name="startIconTint">?colorPrimary</item>
        <item name="errorTextAppearance">@style/ErrorText</item>
    </style>

    <style name="ErrorText" parent="TextAppearance.AppCompat.Small">
        <item name="android:textSize">0dp</item>
    </style>
    
    <style name="TextInputEditTextStyle">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">0dp</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="SearchTextInputEditTextStyle" parent="TextInputEditTextStyle">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="SearchTextInputTheme" parent="AppTheme">
        <item name="android:colorControlActivated">@color/colorWhite</item>
    </style>
    <style name="DescriptionText">
        <item name="fontFamily">@font/source_sans_pro_regular</item>
        <item name="android:textSize">17sp</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:textColor">@color/colorEnterpriseDescription</item>
    </style>
</resources>